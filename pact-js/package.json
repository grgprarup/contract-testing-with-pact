  "dependencies": {
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "exlint": "^0.1.6",
    "eslint": "^6.8.0",
    "express": "^4.18.2",
    "jest": "^29.3.1"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^10.4.0",
    "axios": "^1.2.1"
  }
}
